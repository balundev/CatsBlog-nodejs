<% include ../partials/header %>

<div class="container">
    <h1 style="text-align: center;">Edit <%= cat.name %></h1>
    <div style="width:30%; margin:0 auto;">
        <form action="/cats/<%= cat.id%>/edit?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="cat[name]" placeholder="name" value="<%= cat.name %>"/>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="cat[image]" placeholder="image url" value="<%= cat.image%>"/>
            </div>
            <div class="form-group">
                <textarea class="form-control" name="cat[description]" placeholder="Description..." style="height: 400px"><%= cat.description %></textarea>
            </div>
            <div class="form-group">
                <input class="btn btn-warning" type="submit" value="Submit!"/>
            </div>
        </form>
        <a href="/cats">Go back</a>
    </div>
</div>

<% include ../partials/footer %>
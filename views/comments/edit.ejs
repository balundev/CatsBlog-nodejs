<% include ../partials/header %>

<div class="container">
    <h1 style="text-align: center;">Edit comment</h1>
    <div style="width:30%; margin:0 auto;">
        <form action="/cats/<%= catId %>/comments/<%=comment.id%>/edit?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="name" value="<%= comment.text %>"/>
            </div>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Submit!"/>
            </div>
        </form>
        <a href="/cats">Go back</a>
    </div>
</div>

<% include ../partials/footer %>
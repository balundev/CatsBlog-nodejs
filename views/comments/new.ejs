<% include ../partials/header%>
<div class="container">
    <h1 style="text-align: center;">Add new comment!</h1>
    <div style="width:30%; margin:0 auto;">
        <form action="/cats/<%= cat.id%>/comments" method="POST">
            <div class="form-group">
                <textarea class="form-control" name="comment[text]" placeholder="Comment..."></textarea>
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-default btn-block btn-primary" type="submit" value="Submit!"/>
            </div>
        </form>
        <a href="/cats">Go back</a>
    </div>
</div>
<% include ../partials/footer%>